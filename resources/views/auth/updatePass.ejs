<section class="login flex justify-center pt-24">
    <div class="w-full max-w-xs">
      <div>
        <form
          action="/setNewPass"
          method="POST"
          class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4"
        >
          <% if(messages.error){ %>
          <span class="text-red-500 text-small"><%= messages.error %></span>
          <% } %>
          <input type="hidden" id="numberForOTP" name="numberForOTP" value="<%=number%>" />
          <input type="hidden" id="role" name="role" value="<%=role%>" />
          <div class="mb-6">
            <label
              class="block text-gray-700 text-sm font-bold mb-2"
              for="updatepassword"
            >
              Enter New Password
            </label>
            <input
              class="
                shadow
                appearance-none
                border
                rounded
                w-full
                py-2
                px-3
                text-gray-700
                mb-3
                leading-tight
                focus:outline-none focus:shadow-outline
              "
              id="updatepassword"
              type="password"
              name="updatepassword"
              placeholder="******************"
            />
          </div>
          <div class="mb-6">
            <label
              class="block text-gray-700 text-sm font-bold mb-2"
              for="reEnteredpassword"
            >
              ReEnter Password
            </label>
            <input
              class="
                shadow
                appearance-none
                border
                rounded
                w-full
                py-2
                px-3
                text-gray-700
                mb-3
                leading-tight
                focus:outline-none focus:shadow-outline
              "
              id="reEnteredpassword"
              type="password"
              name="reEnteredpassword"
              placeholder="******************"
            />
          </div>
          <div class="flex items-center justify-center">
            <button
              class="btn-primary rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
              type="submit"
            >
              Submit
            </button>
        </form>
      </div>
      <p class="text-center text-gray-500 text-xs">
        &copy;2020 Your Meal. All rights reserved.
      </p>
    </div>
  </section>